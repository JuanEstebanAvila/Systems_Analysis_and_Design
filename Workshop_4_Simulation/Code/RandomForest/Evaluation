from sklearn.metrics import accuracy_score, classification_report, confusion_matrix
import matplotlib.pyplot as plt
import seaborn as sns

def evaluate_system(model, X_test, y_test, phase_name="TESTING"):
    """
    Ejecuta la inferencia y calcula métricas de rendimiento.
    """
    print(f"\n[SYSTEM] Evaluando fase: {phase_name}...")
    y_pred = model.predict(X_test)
    
    acc = accuracy_score(y_test, y_pred)
    print(f"--> Accuracy del Sistema: {acc:.4f}")
    print("--> Reporte detallado:")
    print(classification_report(y_test, y_pred))
    
    return acc

def plot_confusion_matrix(model, X_test, y_test):
    """Genera gráfico de matriz de confusión."""
    y_pred = model.predict(X_test)
    cm = confusion_matrix(y_test, y_pred)
    
    plt.figure(figsize=(8, 6))
    sns.heatmap(cm, annot=True, fmt='d', cmap='Blues')
    plt.title('Simulación: Matriz de Confusión')
    plt.ylabel('Realidad')
    plt.xlabel('Predicción del Modelo')
    plt.tight_layout()
    plt.show()
